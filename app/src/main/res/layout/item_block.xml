<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_block"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:alpha="0.5"
        android:background="@drawable/ic_user"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tv_blockUserName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="TextView"
        android:textColor="#4e4e4e"
        android:textSize="16sp"
        android:textStyle="bold"
        android:maxLines="1"
        android:alpha="0.5"
        app:layout_constraintBottom_toBottomOf="@+id/img_block"
        app:layout_constraintEnd_toStartOf="@+id/btn_unblock"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/img_block"
        app:layout_constraintTop_toTopOf="@+id/img_block"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_unblock"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/btn_box"
        android:text="Unblock"
        android:textAllCaps="false"
        android:textColor="#919191"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_blockUserStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:text="TextView"
        android:maxLines="2"
        android:alpha="0.5"
        app:layout_constraintBottom_toBottomOf="@+id/img_block"
        app:layout_constraintEnd_toStartOf="@+id/btn_unblock"
        app:layout_constraintStart_toEndOf="@+id/img_block"
        app:layout_constraintTop_toBottomOf="@+id/tv_blockUserName" />

    <View
        android:id="@+id/view2"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_blockUserStatus"
        app:layout_constraintTop_toBottomOf="@+id/tv_blockUserStatus"
        app:layout_constraintVertical_bias="1.0"
        android:background="#c9c9c9"/>

    <!--<ImageView-->
        <!--android:id="@+id/imageView7"-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_height="0dp"-->
        <!--app:layout_constraintBottom_toBottomOf="@+id/img_block"-->
        <!--app:layout_constraintEnd_toEndOf="@+id/img_block"-->
        <!--app:layout_constraintStart_toStartOf="@+id/img_block"-->
        <!--app:layout_constraintTop_toTopOf="@+id/img_block"-->
